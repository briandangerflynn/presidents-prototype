<div class="form">
  <h2>Sign In</h2>
  <p><small>New here? <a href="/users/new" class="underline red">Create an account</a></small></p>
  <%= form_tag '/login' do %>
    <%= text_field_tag :name, nil, placeholder: 'Name' %>

    <%= password_field_tag :password, nil, placeholder: 'Password' %>
    <%= submit_tag "Log In", :class => 'submit-button' %>
  <% end %>
</div>

