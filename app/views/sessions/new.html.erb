<div class="form">
  <h2>Login</h2>
  <%= form_tag '/login' do %>
    <%= text_field_tag :name, nil, placeholder: 'Name' %>

    <%= password_field_tag :password, nil, placeholder: 'Password' %>
    <%= submit_tag "Log In" %>
  <% end %>
  <p>New here? <a href="/users/new">Create an account</a>.</p>
</div>

