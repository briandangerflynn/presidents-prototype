<p>Want to create a new team? <a href="/teams/new">Click here</a>!</p>

<div class="form">
  <h2>Join Existing Team</h2>
  <%= form_tag(join_team_path, method: :get) do %>
    <%= text_field_tag :teamname, params[:teamname] %>
    <%= submit_tag 'Search', name: nil %>
  <% end %>


  <% if @teams %>
    <% @teams.each do |team| %>
      <a href="teams/<%= team.id %>"><%= team.teamname %></a>
    <% end %>
  <% end %>

</div>
